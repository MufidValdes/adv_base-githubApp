<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Submission2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppThemeSplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/darker_gray</item>
    </style>


    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="TextContent.Title">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.TitleDetails">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextContent.SubtitleDetails">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/detail_text</item>
    </style>

    <style name="TextContent.Details">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/detail_text</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>